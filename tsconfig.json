{
  "compilerOptions": {
    "outDir": "tsc-build",
    "baseUrl": "./src",
    "typeRoots": ["src/types", "node_modules/@types"],
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2021"],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2021",
    "strictFunctionTypes": true,
    "noImplicitAny": true,
    "importsNotUsedAsValues": "error",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "checkJs": true,
    "paths": {
      "src/*": ["*"]
    }

  },
  "include": ["src"],
}