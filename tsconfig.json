{
	"compilerOptions": {
		"outDir": "tsc-build",
		"baseUrl": "src",
		"typeRoots": ["node_modules/@types"],
		"sourceMap": false,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["ES2021", "DOM"],
		"module": "ES2022",
		"moduleResolution": "node",
		"target": "ES2021",
		"strictFunctionTypes": true,
		"noImplicitAny": true,
		"importsNotUsedAsValues": "error",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowJs": true,
		"checkJs": true
	},
	"include": ["bb/runner/src", "bt/src", "helpers/src", "tp/src"],
	"exclude": ["**/tsc-build", "**/dist", "**/build"]
}
